<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawerlayou"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="ThirdActivity" >
    <LinearLayout 
         android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
        >
    <RelativeLayout android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_width="match_parent">
        <TextView
    android:id="@+id/leibie"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#129CDB"
    android:textSize="15dp" 
      android:layout_marginTop="8dp"
    android:layout_marginLeft="15dp"
    android:text="类别" />

<TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
    android:layout_alignTop="@+id/textView1"
    android:layout_centerHorizontal="true"
    android:text="课程"
    android:textColor="#000000"
    android:textSize="20dp" />

<ImageView
    android:id="@+id/imageView1"
   android:layout_width="18dp"
    android:layout_height="18dp"
    android:layout_marginRight="10dp"
    android:layout_alignParentRight="true"
    android:layout_marginTop="8dp"
    android:src="@drawable/scblue" />
        
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
         android:layout_marginTop="10dp"
        android:layout_height="30dp" >

        <TextView
            android:id="@+id/mianshou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="@drawable/tabbg2"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="#129CDB"
            android:text="面授课程" />
    
        <TextView
            android:id="@+id/wangluo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/mianshou"
            android:background="@drawable/tabbg1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="#129CDB"
            android:gravity="center"
            android:text="网络课程" />

        <TextView
            android:id="@+id/zhibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/mianshou"
            android:background="@drawable/tabbg3"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center"
            android:textColor="#129CDB"
            android:text="直播课程" />
       
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="7dp"      
        android:layout_height="wrap_content" >
        <com.test.myvisen.zidingyi.XListView
            android:id="@+id/th_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
        </com.test.myvisen.zidingyi.XListView  >
    </RelativeLayout>
 </LinearLayout>
 <RelativeLayout 
      android:layout_width="match_parent"
      android:background="#FFFFFF"
        android:layout_height="match_parent"
        android:layout_gravity="left"
     >
  <ListView 
      android:id="@+id/cehualv"
       android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
      ></ListView>
 </RelativeLayout>
 </android.support.v4.widget.DrawerLayout>
